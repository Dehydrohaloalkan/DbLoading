<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <variable name="logDirectory" value="logs"/>
  <variable name="commonLayout"
            value="${longdate}|${uppercase:${level}}|traceId=${aspnet-traceidentifier:whenEmpty=${activityid}}|user=${aspnet-user-identity:whenEmpty=anonymous}|method=${aspnet-request-method}|url=${aspnet-request-url}|status=${aspnet-response-statuscode}|logger=${logger}|${message}${onexception: inner= ${exception:format=tostring}}"/>

  <targets>
    <target xsi:type="Console" name="console"
            layout="${var:commonLayout}" />
    <target xsi:type="File" name="allfile" fileName="${logDirectory}/nlog-all-${shortdate}.log"
            layout="${var:commonLayout}" />
    <target xsi:type="File" name="ownfile" fileName="${logDirectory}/nlog-own-${shortdate}.log"
            layout="${var:commonLayout}" />
  </targets>

  <rules>
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    <logger name="*" minlevel="Trace" writeTo="console" />
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    <logger name="*" minlevel="Trace" writeTo="ownfile" />
  </rules>
</nlog>
